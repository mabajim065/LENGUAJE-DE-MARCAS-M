<script>
    //<!--Se desea escribir un programa que pregunte al usuario hasta que la tabla de mulitiplicar quiere escribir.
    //el programa escribara las tablas de multiplicar (1 a 10) del numero ingresado por el usuario.-->
    let numero= prompt("Ingresa el numero de tablas numero");
    for (let i=1; i<=numero; i++)
        for(let j=1;j<=10;j++)
{
        if(numero>10) break;
        document.write(i);
        document.write(" x ");
        document.write(j);
        document.write(" = ");
        document.write(i*j);
        document.write("<br/>");
    }
</script>
